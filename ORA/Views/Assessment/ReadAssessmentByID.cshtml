@model ORA.Models.AssessmentVM

@{
    ViewBag.Title = "Assessment Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewBag.About = false;
}

<link href="~/Content/ReadAssessmentsbyID.css" rel="stylesheet" />
<link href='//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet' />


@Html.HiddenFor(model => model.AssessmentId)

<div class="panel">
    <div class="panel-heading">
        <h2>@Html.DisplayFor(model => model.Employee.EmployeeFirstName) @Html.DisplayFor(model => model.Employee.EmployeeLastName)</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6">
                <!-- Category -->
                <div class="single category">
                    <h3 class="side-title">Technical Delivery</h3>
                    <ul class="list-unstyled">
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TDProblemSolving) <span class="pull-right">@Html.DisplayFor(model => model.TDProblemSolving)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TDQualityOfWork) <span class="pull-right">@Html.DisplayFor(model => model.TDQualityOfWork)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TDProductKnowledge) <span class="pull-right">@Html.DisplayFor(model => model.TDProductKnowledge)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TDProductivity) <span class="pull-right">@Html.DisplayFor(model => model.TDProductivity)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TDComments) <span class="pull-right">@Html.DisplayFor(model => model.TDComments)</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="single category">
                    <h3 class="side-title">CSR</h3>
                    <ul class="list-unstyled">
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.CSRWrittenSkills) <span class="pull-right">@Html.DisplayFor(model => model.CSRWrittenSkills)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.CSRVerbalSkills) <span class="pull-right">@Html.DisplayFor(model => model.CSRVerbalSkills)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.CSRListeningSkills) <span class="pull-right">@Html.DisplayFor(model => model.CSRListeningSkills)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.CSRProfesionalismTeamwork) <span class="pull-right">@Html.DisplayFor(model => model.CSRProfesionalismTeamwork)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.CSRComments) <span class="pull-right">@Html.DisplayFor(model => model.CSRComments)</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="single category">
                    <h3 class="side-title">AD</h3>
                    <ul class="list-unstyled">
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.ADAttendence) <span class="pull-right">@Html.DisplayFor(model => model.ADAttendence)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.ADEthicalBehavior) <span class="pull-right">@Html.DisplayFor(model => model.ADEthicalBehavior)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.ADOrganizeDetailedWork) <span class="pull-right">@Html.DisplayFor(model => model.ADOrganizeDetailedWork)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.ADMeetDeadlines) <span class="pull-right">@Html.DisplayFor(model => model.ADMeetDeadlines)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.ADComments) <span class="pull-right">@Html.DisplayFor(model => model.ADComments)</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="single category">
                    <h3 class="side-title">TM</h3>
                    <ul class="list-unstyled">
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TMResourceUse) <span class="pull-right">@Html.DisplayFor(model => model.TMResourceUse)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TMTechnicalMonitoring) <span class="pull-right">@Html.DisplayFor(model => model.TMTechnicalMonitoring)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TMFeedback) <span class="pull-right">@Html.DisplayFor(model => model.TMFeedback)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TMAskingQuestions) <span class="pull-right">@Html.DisplayFor(model => model.TMAskingQuestions)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.TMComments) <span class="pull-right">@Html.DisplayFor(model => model.TMComments)</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="single category">
                    <h3 class="side-title">MI</h3>
                    <ul class="list-unstyled">
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.MIAttitudeWork) <span class="pull-right">@Html.DisplayFor(model => model.MIAttitudeWork)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.MIGroomingAppearance) <span class="pull-right">@Html.DisplayFor(model => model.MIGroomingAppearance)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.MIPersonalGrowth) <span class="pull-right">@Html.DisplayFor(model => model.MIPersonalGrowth)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.MIPotentialAdvancement) <span class="pull-right">@Html.DisplayFor(model => model.MIPotentialAdvancement)</span></a></li>
                        <li><a href="" title="">@Html.DisplayNameFor(model => model.MIComments) <span class="pull-right">@Html.DisplayFor(model => model.MIComments)</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <p>Last modified by: @Html.DisplayFor(model => model.ModifiedBy) on @Html.DisplayFor(model => model.Modified)</p>
    </div>
</div>
<p>

    @if ((string)Session["Role"] == "Team Lead" && Model.Employee.EmployeeId != (long)Session["ID"] || (string)Session["Role"] == "Manager" && Model.Employee.EmployeeId != (long)Session["ID"] || (string)Session["Role"] == "Director" && Model.EmployeeID != (long)Session["ID"])
    {
        @Html.ActionLink("Update", "UpdateAssessment", "Assessment", new { id = Model.AssessmentId }, htmlAttributes: new { @class = "btn btn-primary" })
    }
    else
    {

    }

</p>





<style>
    .panel-heading {
        border-color: #dddddd;
        background-color: #f5f5f5;
        color: #2d7788;
    }

    .panel {
        border-color: lightgray;
    }

    .panel-footer {
        border-color: lightgray;
    }

    .single h3.side-title {
        color: #2d7788;
    }

        .single h3.side-title:after {
            background-color: #2d7788;
        }
</style>
