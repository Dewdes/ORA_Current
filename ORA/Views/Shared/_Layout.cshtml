<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ORA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="~/Account/ReadAccount"><img src="~/Images/OnshoreLogo.png" width="50px" style="position: center;" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if ((bool)Session["LoggedIn"]) //&& ((string)Session["Role"] == "Admin" || (string)Session["Role"] == "Director"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin Tools <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Employees", "ViewEmployees", "Employee")</li>
                                <li>@Html.ActionLink("Clients", "ReadClients", "Clients")</li>
                                <li>@Html.ActionLink("Teams", "ReadTeams", "Team")</li>
                                <li class="divider"></li>
                                <li><a href="#">Not yet implemented tool</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Not yet implemented tool</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="navbar-collapse collapse" style="float: right; z-index: 1; position: relative;">
                    <ul class="nav navbar-nav">
                        @if ((bool)Session["LoggedIn"])
                        {
                            <li><a href="~/Account/ReadAccount">@Session["Email"]</a></li>
                            <li>@Html.ActionLink("Logout", "LogOut", "Login")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Register", "CreateEmployee", "Employee")</li>
                            <li>@Html.ActionLink("Login", "Login", "Login")</li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr class="footLine" />
        <footer>
            <p>&copy; @DateTime.Now.Year - ORA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
