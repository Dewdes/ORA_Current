<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ORA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href='@Url.Action("Index", "Home")'><img src="~/Images/OnshoreLogo.png" width="50px" style="right: -30px;display: block;position: relative;" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Employees", "ViewEmployees", "Employee")</li>
                        <li>@Html.ActionLink("Clients", "ReadClients", "Clients")</li>
                        <li>@Html.ActionLink("Teams", "ReadTeams", "Team")</li>*@
                </ul>
                <div class="navbar-collapse collapse" style="float:right;z-index:1;position:relative;">
                    <ul class="nav navbar-nav"></ul>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" style="padding:0;" type="button" data-toggle="dropdown" data-hover="dropdown">
                            <img src="~/Images/dropdownIcon.png"  width="50px"/>
                        </button>
                        <ul class="dropdown-menu" style="padding:0;left: -85px;">
                            <li><a href='@Url.Action("ViewEmployees", "Employee")'>Employees</a></li>
                            <li><a href='@Url.Action("ReadClients", "Clients")'>Clients</a></li>
                            <li><a href='@Url.Action("ReadTeams", "Team")'>Teams</a></li>
                            @if ((bool)Session["LoggedIn"])
                            {
                                <li><a href='@Url.Action("LogOut", "Login")'>Logout</a></li>
                            }
                            else
                            {
                                <li><a href='@Url.Action("CreateEmployee", "Employee")'>Register</a></li>
                                <li><a href='@Url.Action("Login", "Login")'>Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
